<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TarjetaFragment" >

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/imgtarjeta"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_generar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="179dp"
        android:layout_height="26dp"
        android:layout_marginTop="64dp"
        android:text="Genere su cídogo de acceso"
        app:layout_constraintTop_toBottomOf="@+id/btn_generar"
        tools:layout_editor_absoluteX="116dp" />

    <TextView
        android:id="@+id/tv_codigo_acceso"
        android:layout_width="132dp"
        android:layout_height="40dp"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_generar" />

    <TextView
        android:id="@+id/tv_msg_codigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Su código es:"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/tv_codigo_acceso"
        app:layout_constraintHorizontal_bias="0.358"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_generar" />
</androidx.constraintlayout.widget.ConstraintLayout>